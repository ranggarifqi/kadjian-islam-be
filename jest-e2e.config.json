{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.[jt]sx?$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testEnvironment": "node",
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/$1"
  },
  "modulePathIgnorePatterns": ["<rootDir>/dist/"]
}
