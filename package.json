{
  "name": "kadjian-islam-be",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development npm run prisma:migration:apply && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config=jest-unit.config.json --verbose",
    "test:clearcache": "jest --config=jest-unit.config.json --clearCache",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run docker:test && npm run test:e2e:init && npm run test:e2e:start",
    "test:e2e:init": "NODE_ENV=test dotenv -e .env.test -- node ./test-db-connect.js && dotenv -e .env.test --  npm run prisma:migration:deploy",
    "test:e2e:start": "NODE_ENV=test dotenv -e .env.test -- jest --config=jest-e2e.config.json --runInBand --no-cache --verbose; npm run docker:test:down",
    "test:e2e:ci": "npm run docker:test:ci && npm run test:e2e:ci:init && npm run test:e2e:ci:start",
    "test:e2e:ci:init": "NODE_ENV=test node ./test-db-connect.js && npm run prisma:migration:deploy",
    "test:e2e:ci:start": "NODE_ENV=test jest --config=jest-e2e.config.json --runInBand --no-cache --verbose; npm run docker:test:down",
    "docker:dev": "NODE_ENV=development docker-compose --env-file ./.env up",
    "docker:dev:build": "docker-compose --env-file ./.env build",
    "docker:dev:exec": "docker-compose exec api sh",
    "docker:test": "NODE_ENV=test docker-compose --project-name kadjian-islam-test --file ./docker-compose.test.yml --env-file ./.env.test up -d",
    "docker:test:down": "NODE_ENV=test docker-compose --project-name kadjian-islam-test --file ./docker-compose.test.yml down",
    "docker:test:ci": "NODE_ENV=test docker-compose --project-name kadjian-islam-test --file ./docker-compose.test.yml up -d",
    "prisma:migration:draft": "npx prisma migrate dev --create-only",
    "prisma:migration:apply": "npx prisma migrate dev && npm run prisma:generate",
    "prisma:migration:deploy": "npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@prisma/client": "^4.2.1",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "date-fns": "^2.29.3",
    "dotenv-cli": "^6.0.0",
    "lodash": "^4.17.21",
    "nodemailer": "^6.8.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/lodash": "^4.14.184",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.6",
    "@types/passport-jwt": "^3.0.7",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "jest-mock-extended": "^3.0.1",
    "prettier": "^2.3.2",
    "prisma": "^4.2.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  }
}
